generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  uid   String  @unique
  email String  
  name  String
  token String  

  titles    Title[]
  @@unique([uid, token])
}

model AnonymousUser {
  id  String    @id @default(auto()) @map("_id") @db.ObjectId
  uid String    @unique
  token String  
  createdAt DateTime @default(now())
  expireAt DateTime?

  titles Title[]
  @@unique([uid, token])
}



model Title {
  id            String               @id @default(auto()) @map("_id") @db.ObjectId
  uid           String    
  token         String

  user          User?                @relation(fields: [uid, token], references: [uid, token])
  anonymousUser AnonymousUser?       @relation(fields: [uid, token], references: [uid, token])
  todos         Todo[]

  @@unique([uid, token])
}
model Todo {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  uid         String    
  token       String
  content     String

  title     Title     @relation(fields: [uid, token], references: [uid, token])
  schedule  Schedule  @relation(fields: [uid, token], references: [uid, token])
}

model Schedule {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  uid           String    
  token         String       
  days          String[]
  time          String
  reiteration   Boolean
  
  todos         Todo[]

  @@unique([uid, token])
}


